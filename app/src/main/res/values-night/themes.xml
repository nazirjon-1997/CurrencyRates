<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Valute" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/purple_50</item>
        <item name="colorPrimaryVariant">@color/purple_70</item>
        <item name="colorOnPrimary">@color/purple_70</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_20</item>
        <item name="colorSecondaryVariant">@color/teal_70</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSurface">@color/surface_color</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        <item name="android:navigationBarColor">@color/surface_color</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <!--        <item name="android:windowBackground">@drawable/splash</item>-->

        <item name="preferenceTheme">@style/AppTheme.PreferenceThemeOverlay</item>

        <item name="appBarLayoutStyle">@style/appBarLayout</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="appBarLayout" parent="Widget.Design.AppBarLayout">
        <item name="android:background">@color/background_dark</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:statusBarColor">@color/purple_70</item>
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="AppTheme.PreferenceThemeOverlay" parent="PreferenceThemeOverlay">
        <item name="android:layout">@layout/fragment_setting</item>
    </style>
</resources>