<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardId"
    android:layout_margin="5dp"
    app:cardCornerRadius="8dp"
    android:layout_height="100dp">
    <LinearLayout
        android:padding="5dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="100dp">
    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iconValute"
            android:foregroundGravity="center"
            android:src="@drawable/tajikistan"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/purple_500"
            android:layout_width="80dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_alignParentEnd="true"
            android:id="@+id/linearLayout">
            <TextView
                android:id="@+id/pokupat"
                android:text="Покупка: 932 TJS"
                android:textColor="@color/purple_500"
                android:gravity="center"
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:id="@+id/prodaj"
                android:textSize="16dp"
                android:text="Продаж: 938 TJS"
                android:textColor="@color/purple_700"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginLeft="8dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/iconValute"
        android:layout_toEndOf="@+id/iconValute">
        <TextView
            android:id="@+id/name"
            android:text="TJS"
            android:textSize="18dp"
            android:layout_width="100dp"
            android:gravity="center"
            android:textColor="@color/text"
            android:layout_height="wrap_content"
            android:textStyle="normal|bold"
            android:textAllCaps="true">
        </TextView>
        <TextView
            android:id="@+id/nameCountry"
            android:textSize="15dp"
            android:text="TajikistanTajikistanTajikistan"
            android:textColor="@color/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>
    </RelativeLayout>
</LinearLayout>
</androidx.cardview.widget.CardView>